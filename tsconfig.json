{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "jsx": "preserve",
    "types": ["element-plus/global"],
    "removeComments": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
